<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Yuriy" id="1">
        <sql dbms="postgresql" endDelimiter=";">
            CREATE SCHEMA missioncontrol
        </sql>
        <createTable tableName="patient" schemaName="missioncontrol">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="tablet" schemaName="missioncontrol">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="patient_id" type="uuid">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="application_account" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableSchemaName="missioncontrol"
                baseColumnNames="patient_id"
                baseTableName="tablet"
                constraintName="tablet_to_patient_fk"
                referencedTableSchemaName="missioncontrol"
                referencedColumnNames="id"
                referencedTableName="patient"/>


        <createTable tableName="appointment" schemaName="missioncontrol">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="patient_id" type="uuid">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="date_time" type="timestamptz">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableSchemaName="missioncontrol"
                baseColumnNames="patient_id"
                baseTableName="appointment"
                constraintName="appointment_to_patient_fk"
                referencedTableSchemaName="missioncontrol"
                referencedColumnNames="id"
                referencedTableName="patient"/>
    </changeSet>

</databaseChangeLog>
